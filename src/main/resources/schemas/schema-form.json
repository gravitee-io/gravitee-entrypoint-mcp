{
    "$schema": "http://json-schema.org/draft-07/schema#",
    "type": "object",
    "definitions": {
        "MCPToolAnnotations": {
            "description": "Optional properties describing tool behavior",
            "properties": {
                "title": {
                    "title": "Title",
                    "type": "string",
                    "description": "Human-readable title for the tool"
                },
                "readOnlyHint": {
                    "title": "Read-only",
                    "type": "boolean",
                    "description": "If true, the tool does not modify its environment",
                    "default": false
                },
                "destructiveHint": {
                    "title": "Destructive",
                    "type": "boolean",
                    "description": "If true, the tool may perform destructive updates",
                    "default": true
                },
                "idempotentHint": {
                    "title": "Idempotent",
                    "type": "boolean",
                    "description": "If true, calling the tool repeatedly with same args has no additional effect",
                    "default": false
                },
                "openWorldHint": {
                    "title": "Open World",
                    "type": "boolean",
                    "description": "If true, the tool may interact with external entities",
                    "default": true
                }
            }
        },
        "MCPGatewayMappingHttp": {
            "description": "Contains information that will be used by the gateway to map a JsonRPCRequest to an HTTP call to the backend.",
            "properties": {
                "method": {
                    "type": "string",
                    "description": "HTTP method to use to call the backend"
                },
                "path": {
                    "type": "string",
                    "description": "Path to use to call the backend"
                },
                "contentType": {
                    "type": "string",
                    "description": "ContentType to use to call the backend"
                },
                "pathParams": {
                    "type": "array",
                    "description": "List of arguments from the JsonRPCRequest to be used as a path param",
                    "items": {
                        "type": "string"
                    }
                },
                "queryParams": {
                    "type": "array",
                    "description": "List of arguments from the JsonRPCRequest to be used as a query param",
                    "items": {
                        "type": "string"
                    }
                },
                "headers": {
                    "type": "array",
                    "description": "List of arguments from the JsonRPCRequest to be used as an HTTP header",
                    "items": {
                        "type": "string"
                    }
                }
            }
        },
        "MCPGatewayMapping": {
            "description": "Contains information that will be used by the gateway to map a JsonRPCRequest to a call.",
            "properties": {
                "http": {
                    "$ref": "#/definitions/MCPGatewayMappingHttp"
                }
            }
        },
        "MCPToolDefinition": {
            "properties": {
                "name": {
                    "title": "Tool name",
                    "type": "string",
                    "description": "Name of the MCP tool."
                },
                "description": {
                    "title": "Tool description",
                    "type": "string",
                    "description": "Descriptions of the MCP tool."
                },
                "inputSchema": {
                    "title": "Tool input schema",
                    "type": "object",
                    "description": "Input schema of the MCP tool.",
                    "additionalProperties": true
                },
                "outputSchema": {
                    "title": "Tool output schema",
                    "type": "object",
                    "description": "Output schema of the MCP tool.",
                    "additionalProperties": true
                },
                "annotations": {
                    "title": "Tool annotations",
                    "$ref": "#/definitions/MCPToolAnnotations"
                }
            }
        },
        "MCPTool": {
            "properties": {
                "toolDefinition": {
                    "$ref": "#/definitions/MCPToolDefinition"
                },
                "gatewayMapping": {
                    "$ref": "#/definitions/MCPGatewayMapping"
                }
            }
        }
    },
    "properties": {
        "tools": {
            "type": "array",
            "title": "MCP tools",
            "description": "The available tools description",
            "items": {
                "$ref": "#/definitions/MCPTool"
            }
        },
        "mcpPath": {
            "title": "The MCP path for an AI agent",
            "description": "The MCP path an AI agent will use to connect to the API. This path is appended to the API contextPath. Default is: /mcp",
            "type": "string",
            "default": "/mcp"
        }
    },
    "additionalProperties": false,
    "required": ["mcpPath"]
}
